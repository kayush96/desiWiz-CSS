<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment"
    android:background="@drawable/profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgUserProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_user"
            android:layout_margin="30dp"
            android:contentDescription="@string/userimage" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textSize="25sp"
            android:layout_below="@+id/imgUserProfile"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtUserMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtUserName"
            android:text="@string/_91_1112223334"
            android:textSize="18sp"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_phone"
            android:drawableTint="@color/txtColorHint"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/txtProfile"
            />
        <TextView
            android:id="@+id/txtUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtUserMobile"
            android:text="@string/name_company_com"
            android:textSize="18sp"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_email_bold"
            android:drawableTint="@color/txtColorHint"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/txtProfile"
            />

        <TextView
            android:id="@+id/txtUserAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtUserEmail"
            android:text="@string/delhi"
            android:textSize="18sp"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/txtColorHint"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/txtProfile"
            />

        <!--<Button
            android:id="@+id/btnLogOut"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtUserAddress"
            android:background="@drawable/custom_button"
            android:text="Log Out"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_margin="80dp"/>-->

    </RelativeLayout>

</FrameLayout>